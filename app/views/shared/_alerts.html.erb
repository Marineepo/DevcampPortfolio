<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Benjamin Nicklaus Portfolio", sticky: false, time: 5000) %>
<% elsif flash[:error] %>  
  <%= js add_gritter(flash[:error], title: "Benjamin Nicklaus Portfolio", sticky: false, time: 5000) %>
<% else %>  
  <%= js add_gritter(flash[:notice], title: "Benjamin Nicklaus Portfolio", sticky: false, time: 5000) %>
<% end %>  